# yaml

config_vars: @CONFIG_VAR_PATH@

components_manager:
    coro_pool:
        initial_size: 500
        max_size: 1000

    task_processors:
        main-task-processor:
            worker_threads: $worker-threads
            thread_name: main-worker

        fs-task-processor:
            worker_threads: $worker-threads
            thread_name: fs-worker

    default_task_processor: main-task-processor

    components:
        server:
            listener:
                port: $server-port
                task_processor: main-task-processor
        logging:
            fs-task-processor: fs-task-processor
            loggers:
                default:
                    file_path: '@stderr'
                    level: $logger-level
                    overflow_behavior: discard

        tracer:
            service-name: uservice-dynconf

        dynamic-config:
            fs-cache-path: ''

        dynamic-config-fallbacks:
            fallback-path: @CONFIG_FALLBACK_PATH@

        dns-client:
            fs-task-processor: fs-task-processor

        fs-cache-main:
            dir: /var/www           # Path to the directory with files
            update-period: 10s        # update cache each N seconds
            fs-task-processor: fs-task-processor  # Run it on blocking task processor

        handler-static:             # Finally! Static handler.
            fs-cache-component: fs-cache-main
            path: /static/*                  # Registering handlers '/static*' find files.
            method: GET              # Handle only GET requests.
            task_processor: main-task-processor  # Run it on CPU bound task processor

        handler-ping:
            path: /ping
            method: GET
            task_processor: main-task-processor
            throttling_enabled: false
            url_trailing_slash: strict-match

        handler-variables-post:
            path: /admin/v1/variables
            method: POST
            task_processor: main-task-processor

        handler-configs-values:
            path: /configs/values
            method: POST
            task_processor: main-task-processor

        handler-admin-v1-configs:
            path: /admin/v1/configs
            method: POST
            task_processor: main-task-processor

        handler-admin-v1-configs-delete:
            path: /admin/v1/configs/delete
            method: POST
            task_processor: main-task-processor

        handler-variables-uuid-get:
            path: /admin/v1/variables/{uuid}
            method: GET
            task_processor: main-task-processor

        handler-variables-uuid-patch:
            path: /admin/v1/variables/{uuid}
            method: PATCH
            task_processor: main-task-processor
            
        handler-delete-variable:
            path: /admin/v1/variables/{uuid}
            method: DELETE
            task_processor: main-task-processor

        handler-variables-get:
            path: /admin/v1/variables
            method: GET
            task_processor: main-task-processor
            
        handler-configs-get:
            path: /admin/v1/configs
            method: GET
            task_processor: main-task-processor
        
        handler-configs_uuid_clone-post:
            path: /admin/v1/configs/{uuid}/clone
            method: POST
            task_processor: main-task-processor

        testsuite-support: {}

        configs-cache:
            pgcomponent: settings-database
            update-interval: 10s
            full-update-interval: 1m
            update-correction: 2s
            update-jitter: 1s
            chunk-size: 100

        settings-database:
            dbconnection: $dbconnection
            blocking_task_processor: fs-task-processor
            dns_resolver: async

        http-client:
            load-enabled: $is_testing
            fs-task-processor: fs-task-processor

        tests-control:
            load-enabled: $is_testing
            path: /tests/{action}
            method: POST
            task_processor: main-task-processor
            testpoint-timeout: 10s
            testpoint-url: mockserver/testpoint
            throttling_enabled: false
